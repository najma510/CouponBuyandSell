<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorButtonNormal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/background_light"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/myCoupon_single_declineButton"
            android:layout_width="115dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/myCoupon_single_confirmButton"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/myCoupon_single_confirmButton"
            android:background="@color/colorAccent"
            android:text="DECLINE"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/myCoupon_single_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/myCoupon_single_courseAndYear"
            android:layout_below="@+id/myCoupon_single_courseAndYear"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="Responders Address"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/myCoupon_single_courseAndYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myCoupon_single_name"
            android:layout_toEndOf="@+id/myCoupon_single_image"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="Course and Year"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myCoupon_single_image"
            android:layout_width="66dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/defaultpic" />

        <TextView
            android:id="@+id/myCoupon_single_msgReceived"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Message Received"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/myCoupon_single_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/myCoupon_single_image"
            android:layout_toEndOf="@+id/myCoupon_single_image"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="Responders Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/myCoupon_single_confirmButton"
            android:layout_width="115dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/myCoupon_single_image"
            android:layout_marginTop="79dp"
            android:background="@android:color/holo_green_dark"
            android:text="CONFIRM"
            android:textColor="@android:color/background_light" />

        <ImageButton
            android:id="@+id/myCoupon_single_callButton"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/myCoupon_single_confirmButton"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/myCoupon_single_chatButton"
            android:background="@android:color/background_light"
            app:srcCompat="@android:drawable/sym_action_call" />

        <ImageButton
            android:id="@+id/myCoupon_single_chatButton"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/myCoupon_single_confirmButton"
            android:layout_marginEnd="5dp"
            android:background="@android:color/background_light"
            app:srcCompat="@android:drawable/sym_action_chat" />

    </RelativeLayout>
</RelativeLayout>