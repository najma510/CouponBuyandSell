<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorButtonNormal">

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@android:color/background_light"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/buy_singleImage"
            android:layout_width="58dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="3dp"
            android:src="@drawable/defaultpic" />

        <TextView
            android:id="@+id/sell_singleCatererName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/buy_singleImage"
            android:text="Caterer Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sell_singleDateAndMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sell_singleCatererName"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/buy_singleImage"
            android:text="Date and Meal"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sell_singleDateAndMeal"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/buy_singleImage"
            android:text="Seller:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/buy_singleSellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sell_singleDateAndMeal"
            android:layout_toEndOf="@+id/textView27"
            android:text="Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sell_singlePrice"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="Rs.60"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="28sp" />

    </RelativeLayout>
</RelativeLayout>