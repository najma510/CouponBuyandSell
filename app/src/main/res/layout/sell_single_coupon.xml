<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorButtonNormal">

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@android:color/background_light"
        android:paddingBottom="7dp">

        <TextView
            android:id="@+id/sell_singleCatererName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="7dp"
            android:text="Caterer Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sell_singleDateAndMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sell_singleCatererName"
            android:layout_below="@+id/sell_singleCatererName"
            android:text="Date and Meal"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sell_singleCatererName"
            android:layout_below="@+id/sell_singleDateAndMeal"
            android:text="Time Ago:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sell_singleTimeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sell_singleDateAndMeal"
            android:layout_toEndOf="@+id/textView27"
            android:text="ago"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sell_singlePrice"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="Rs.60"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/sell_singleDeleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/sell_availibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sell_singlePrice"
            android:layout_below="@+id/sell_singlePrice"
            android:paddingLeft="9dp"
            android:text="Available"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>