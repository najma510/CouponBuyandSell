<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.buyandsell">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".User" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".User" />
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".User" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CompleteProfile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PostAd"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Account" />
        <activity
            android:name=".ViewCoupon"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".ViewCoupon" />
        <activity
            android:name=".MyCoupon"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SellSuccess" android:parentActivityName=".MainActivity"></activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" android:theme="@style/Base.Theme.AppCompat"/>
    </application>

</manifest>